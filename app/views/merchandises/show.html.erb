<%= @merchandise.title %>
<p><%= link_to @merchandise.creator_name, creator_path(@merchandise.creator)%></p>
<p>Price: <%= @merchandise.price %></p>

<% if !current_user && params[:creator_id] == session[:creator_id] %>
    <%= button_to "Edit Item", edit_merchandise_path(@merchandise), method: "get" %>
    <%= button_to "Delete Item", "Merchandises#delete", method: "get" %>
    <% elsif current_user %>
    <%= button_to "Buy", new_merchandise_sale_path(@merchandise), method: "get" %>
<% end %>

<% @reviews.each do |review| %>
<h3><%= review.title %></h3>
<p><%= review.body %> </p>
<p><%= review.rating %> </p>
<% end %>

<% if current_user && current_user.merchandises.include?(@merchandise) %>
    <%= form_for @review do |f| %>
    <h5>Write A Review</h5>
    Title<br>
    <%= f.text_field :title %><br>
    Review<br>
    <%= f.text_area :body %><br>
    Rating(1-5)<br>
    <%= f.text_field :rating %>
    <%= f.hidden_field :user_id, value: current_user.id %>
    <%= f.hidden_field :merchandise_id, value: @merchandise.id %>
    <%= f.submit %>
    <% end %>
<% end %>

